{
	// Place your snippets for typescriptreact here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"Import Default" : {
		"prefix": "import",
		"body": "import ${2} from '${1:module}';"
	},	
	"Import" : {
		"prefix": "import",
		"body": "import {${2}} from '${1:module}';"
	},
	"React Function Component": {
		"prefix": "rc-fc",
		"body": [
			"import React from 'react';",
			"",
			"const ${1:component-name} = () => {",
			"	return (",
			"		${2:component-render}",
			"	);",
			"}",
			"export default $1;"
		]
	},
	"React Function Page": {
		"prefix": "rc-fc-page",
		"body": [
			"import React from 'react';",
			"import Page from 'components/common/Page';",
			"import Title from 'components/common/Title';",
			"",
			"const ${1:component-name} = () => {",
			"\treturn (",
			"\t\t<Page>",
			"\t\t\t<Title>${2:page-title}</Title>",
			"\t\t</Page>",
			"\t);",
			"}",
			"export default $1;"
		]
	},
	"React useState" : {
		"prefix": "useState",
		"body": "const [${1:state-name}, set${1/^(.)(.*)$/${1:/upcase}${2}/}] = useState(${2:default});"
	},
	"React useStateTyped" : {
		"prefix": "useState<",
		"body": "const [${1:state-name}, set${1/^(.)(.*)$/${1:/upcase}${2}/}] = useState<${2:state-type}>(${3:default});"
	},
	"React useEffect load data" : {
		"prefix": "useEffect",
		"body": [
			"useEffect(() => {",
			"\tconst fetch${1:method-name} = async () => {",
			"\t\tconst ${2:data} = await ${3:apiCall}(${4});",
			"\t\tset${5:state}($2);",
			"\t};",
			"",
			"\tfetch$1();",
			"}, []);"
		]
	}
}